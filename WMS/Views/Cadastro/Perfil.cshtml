@using GridMvc.Html
@using System.Web.Optimization


@model IEnumerable<WMS.Models.Perfil>

@{

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>WMS - Cadastro de Perfil</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        <div>
            <section class="content">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="box">
                            <div class="box-header with-border">

                                <h3 class="box-title">Lista de Perfil</h3>
                                <div class="box-body">
                                    @Html.Grid(Model).Named("grdPerfil").Columns(
             columns =>
             {
             columns.Add(p => p.idPerfil).Titled("Código");
             columns.Add(p => p.desPerfil).Titled("Descrição");

             columns.Add()
                                            .Encoded(false)
                                            .Sanitized(false)
                                            .SetWidth(30)
                                            .RenderValueAs(p => @<a id="btnEdit" class="btnEdit" data-id="@p.idPerfil" href="javascript:EditarPerfil('@p.idPerfil.ToString()', '@p.desPerfil.ToString()')">
                                                &nbsp;<span class='glyphicon glyphicon-edit'></span>
                                            </a>);

             columns.Add()
                                            .Encoded(false)
                                            .Sanitized(false)
                                            .SetWidth(30)
                                            .RenderValueAs(p => @<a href="javascript:ExcluirPerfil('@p.idPerfil.ToString()')">
                                                &nbsp;<span class='glyphicon glyphicon-trash'></span>
                                            </a>);

             }).WithPaging(10).Sortable(true)
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="box">
                                    <div class="box-body pull-right">
                                        <input type="button" value="Novo" class="btn btn-primary glyphicon-edit" id="btnNovo" />
                                    </div>
                                </div>
                            </div>
                        </div>
            </section>

        </div>
        @Scripts.Render("~/Scripts")
        <script src="~/Content/plugins/jQuery/jQuery-2.1.4.min.js"></script>
        <script type="text/javascript" src="~/Scripts/Cadastro/Perfil.js"></script>

        <script>

            CarregarTela();

            function Confirmar(id) {
                idPerfilAux = id;
                $('#ConfirmModal').modal('show');
            }

            $(function () {
                $("#ConfirmModal").on('click', "#deleteConfirm", function () {
                    Acao(idPerfilAux, 'deletar');
                });
            });


        </script>
    }
</body>
</html>
