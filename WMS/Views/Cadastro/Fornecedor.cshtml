@using GridMvc.Html
@using System.Web.Optimization


@model IEnumerable<WMS.Models.Fornecedor>

@{

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cadastro de Fornecedor</title>
</head>
<body>
    <div>

        @using (Html.BeginForm())
        {
            <section class="content">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="box">
                            <div class="box-header with-border">

                                <h3 class="box-title">Lista de Fornecedores</h3>
                                <div class="box-body">
                                    @Html.Grid(Model).Named("grdFornecedor").Columns(
             columns =>
             {
             columns.Add(p => p.idFornecedor).Titled("Código");
             columns.Add(p => p.nmFornecedor).Titled("Nome do Fornecedor");

             columns.Add()
                                        .Encoded(false)
                                        .Sanitized(false)
                                        .SetWidth(30)
                                        .RenderValueAs(p => @<a id="btnEdit" class="btnEdit" data-id="@p.idFornecedor" href="javascript:EditarFornecedor(@p.idFornecedor)">
                                            &nbsp;<span class='glyphicon glyphicon-edit'></span>
                                        </a>);

             columns.Add()
                                            .Encoded(false)
                                            .Sanitized(false)
                                            .SetWidth(30)
                                            .RenderValueAs(p => @<a href="javascript:ExcluirFornecedor('@p.idFornecedor.ToString()')">
                                                &nbsp;<span class='glyphicon glyphicon-trash'></span>
                                            </a>);

             }).WithPaging(10).Sortable(true)
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="box">
                                    <div class="box-body pull-right">
                                        <input type="button" value="Novo" class="btn btn-primary glyphicon-edit" id="btnNovo" />
                                    </div>
                                </div>
                            </div>
                        </div>
            </section>
        }

        @Scripts.Render("~/Scripts")
        <script src="~/Content/plugins/jQuery/jQuery-2.1.4.min.js"></script>
        <script type="text/javascript" src="~/Scripts/Cadastro/Fornecedor.js"></script>

        <script>

            CarregarTela();

        </script>

    </div>
</body>
</html>
