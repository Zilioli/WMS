@using GridMvc.Html
@using System.Web.Optimization
@model IEnumerable<WMS.Models.CEP>

@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Consultar Endereço</title>

</head>
<body>
    <div class="modal-dialog ">
        <div class="modal-content">

            @using (Html.BeginForm())
            {
                <div class="box-body">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Fechar</span></button>
                        <h4 class="modal-title">Consulta de Endereço</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-12  pull-left">
                                    <div class="col-lg-12">
                                        @Html.Label("Endereço","Endereço", new { @class = "" })
                                        <div class="input-group input-group-sm">
                                            @Html.TextBox("txtCEP", "", new { @class = "form-control", @id = "txtCEP" })
                                            <span class="input-group-btn" id="spanCEP" >
                                                <a id="btnCEP" class="btn btn-info btn-flat" href="javascript:ConsultarEndereco()">
                                                    &nbsp;<span class='glyphicon glyphicon-ok'></span>
                                                </a>

                                            </span>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12  pull-left">

                                <div class="box-body" id="gridCEP" style="height:300px;overflow-x:auto;">
                                   
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
    <script type="text/javascript" src="~/Scripts/WMSUtil.js"></script>
    <script type="text/javascript" src="~/Scripts/Util/CEP.js"></script>

</body>
</html>
